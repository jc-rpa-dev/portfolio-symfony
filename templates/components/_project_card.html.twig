<div class="col">
    <article class="card h-100 border border-secondary bg-dark shadow-sm project-card">
        <div class="card-body d-flex flex-column">
            {% if badge is defined and badge %}
                <span class="badge mb-3 {{ badgeClass|default('bg-secondary') }}">
                    {{ badge }}
                </span>
            {% endif %}

            <h3 class="h5 card-title mb-2">
                {% if project.slug %}
                    <a href="{{ path('app_project_show', { slug: project.slug }) }}"
                        class="stretched-link text-decoration-none text-reset">
                        {{ project.title }}
                    </a>
                {% else %}
                    {{ project.title }}
                {% endif %}
            </h3>


            {% if project.context %}
                <p class="card-text small mb-3">
                    {{ project.context }}
                </p>
            {% endif %}

            {% if project.solution %}
                <p class="card-text mb-2">
                    <span class="fw-semibold">Solution :</span> {{ project.solution }}
                </p>
            {% endif %}

            {% if project.impact %}
                <p class="card-text mb-3">
                    <span class="fw-semibold">Impact :</span> {{ project.impact }}
                </p>
            {% endif %}

            {% if project.highlight %}
                <p class="card-text small text-success mt-auto">
                    {{ project.highlight }}
                </p>
            {% endif %}
        </div>
    </article>
</div>
